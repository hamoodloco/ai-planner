# Application Configuration
NODE_ENV=development
PORT=3000
BASE_URL=https://your-repl-url.repl.co

# Security
ENCRYPTION_KEY=generate-with-openssl-rand-hex-32

# Google OAuth Configuration
GOOGLE_CLIENT_ID=your-google-client-id-here
GOOGLE_CLIENT_SECRET=your-google-client-secret-here
GOOGLE_REDIRECT_URI=https://your-repl-url.repl.co/auth/google/callback

# Database (SQLite - default, or PostgreSQL for production)
DATABASE_URL="file:./prisma/dev.db"
# For PostgreSQL: DATABASE_URL="postgresql://user:password@localhost:5432/ai_planner"

# Redis Cache (optional - fallback to memory cache if not configured)
REDIS_URL=redis://localhost:6379

# Logging
LOG_LEVEL=info

# AI/LLM API (optional - using mock planner by default)
LLM_API_KEY=your-llm-api-key-here
